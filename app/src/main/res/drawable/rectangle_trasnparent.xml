<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the grayish transparent background color -->
    <solid android:color="#545454" /> <!-- #80 is the alpha (transparency) for 50% opacity -->

    <!-- Define a slight curve on all four corners -->
    <corners android:radius="8dp" />

    <!-- Optional padding if you want space around the shape -->
    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>