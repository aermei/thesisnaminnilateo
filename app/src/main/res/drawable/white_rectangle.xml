<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set a background color for the rectangle -->
    <solid android:color="#FFFFFF" /> <!-- Replace with your desired color -->

    <!-- Define slight curves on all four corners -->
    <corners android:radius="8dp" /> <!-- Adjust radius for more or less curve -->

    <!-- Optional padding if you want space around the shape -->
    <padding
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>